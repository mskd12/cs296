  /**  The is the constructor 
   * This is the documentation block for the constructor.
   */ 
  
  dominos_t::dominos_t()
  {
    //Ground
    /*!
     * "b2BodyDef" is the datatype for defining the Box2D body
     * 
     * "b2FixtureDef" is used to define various fixtures for the body like friction,restitution,density.
     *  For creating fixture we use the memberfunction CreateFixture(b2Shape* Shape) 
     * 
     * "b2EdgeShape" is datatype for defining Edges. The EdgeShape has a member function "Set" to 
     * set the start and the end position of the edge
     * 
     * "b2PolygonShape" is datatype for defining Polygons. The Polygon Shape also has "SetAsBox"
     * function to set the width, height of the boxes.
     *
     * "b2CircleShape" is datatype for defining Circles.
     * 
     * "b2RevoluteJointDef" is datatype for defining revolute joints. It is created using
     * a member function Initialise(bodyA, bodyB, anchor)
     *  
     * "m_world" defines the world into which various bodies will be put in
     */
    b2Body* b1;  
    {
    /*!Here we create the Ground. 
     * 
     * The variable "b1" defines the body
     * 
     * The variable "shape" sets its start and end positions.
     * 
     * The variable "bd" defines the body.
    */       
      b2EdgeShape shape; 
      shape.Set(b2Vec2(-90.0f, 0.0f), b2Vec2(90.0f, 0.0f));
      b2BodyDef bd; 
      b1 = m_world->CreateBody(&bd); 
      b1->CreateFixture(&shape, 0.0f);
    }
          
    //Top horizontal shelf
    {
	/*!Here we create the Top Horizontal Shelf. 
	 * 
	 * The variable "ground" defines the body
	 * 
	 * The variable "shape" sets its size.
	 * 
	 * The variable "bd" defines the body with which position of box can be set.
	 */		
      b2PolygonShape shape;
      shape.SetAsBox(6.0f, 0.25f);
	
      b2BodyDef bd;
      bd.position.Set(-31.0f, 30.0f);
      b2Body* ground = m_world->CreateBody(&bd);
      ground->CreateFixture(&shape, 0.0f);
    }

    //Dominos
    {
	/*! \b "Here" we create the Dominos 
	 * 
	 * The variable "shape" sets size of each Dominos.	
	 * 
	 * The variable "fd" sets the fixtures such as density, friction.
	 * 
	 * The variable "bd" define the body. It's type is set as dynamic.
	 * 10 Dominos are created in the for loop.
	 */		
      b2PolygonShape shape;
      shape.SetAsBox(0.1f, 1.0f);
	
      b2FixtureDef fd;
      fd.shape = &shape;
      fd.density = 20.0f;
      fd.friction = 0.1f;
		
      for (int i = 0; i < 10; ++i)
		{
		  b2BodyDef bd;
		  bd.type = b2_dynamicBody;
		  bd.position.Set(-35.5f + 1.0f * i, 31.25f);
		  b2Body* body = m_world->CreateBody(&bd);
		  body->CreateFixture(&fd);
		}
    }
      
    //Another horizontal shelf
    {
	/*!Here we create another Horizontal Shelf. 
	 * 
	 * The variable "shape" sets its size using SetAsBox.
	 * 
	 * The variable "bd" defines the body with which position of box can be set.
	*/
      b2PolygonShape shape;
      shape.SetAsBox(7.0f, 0.25f, b2Vec2(-20.f,20.f), 0.0f);
	
      b2BodyDef bd;
      bd.position.Set(1.0f, 6.0f);
      b2Body* ground = m_world->CreateBody(&bd);
      ground->CreateFixture(&shape, 0.0f);
    }


    //The pendulum that knocks the dominos off
    {
	/*!Here we define the pendulum.
	 * 
	 * Body b2 is the bar(static) and b4 is the pendulum which is set to be dynamic
	 * Both of them are boxes.
	 * 
	 * The variable "jd" defines the joint. The variable "anchor" defines the position 
	 * of the joint between two bodies b2 and b4. 
	 */		
      b2Body* b2;
      {
	b2PolygonShape shape;
	shape.SetAsBox(0.25f, 1.5f);
	  
	b2BodyDef bd;
	bd.position.Set(-36.5f, 28.0f);
	b2 = m_world->CreateBody(&bd);
	b2->CreateFixture(&shape, 10.0f);
      }
	
      b2Body* b4;
      {
	b2PolygonShape shape;
	shape.SetAsBox(0.25f, 0.25f);
	  
	b2BodyDef bd;
	bd.type = b2_dynamicBody;
	bd.position.Set(-40.0f, 33.0f);
	b4 = m_world->CreateBody(&bd);
	b4->CreateFixture(&shape, 2.0f);
      }
	
      b2RevoluteJointDef jd;
      b2Vec2 anchor;
      anchor.Set(-37.0f, 40.0f);
      jd.Initialize(b2, b4, anchor);
      m_world->CreateJoint(&jd);
    }
      
    //The train of small spheres
    {
	/*!The train of small spheres
	 * 
	 * The variable "spherebody" defines the Box2D body.
	 * 
	 * The variable "ballbd" defines the Box2D body definition.
	 * 
	 * The variable "circle" defines the circle with which radius of circle can be changed
	 * 
	 * The variable "ballfd" defines fixtures like density.
	 * 
	 * 10 spheres are created 
	 */
      b2Body* spherebody;
	
      b2CircleShape circle;
      circle.m_radius = 0.5;
	
      b2FixtureDef ballfd;
      ballfd.shape = &circle;
      ballfd.density = 5.0f;
      ballfd.friction = 0.0f;
      ballfd.restitution = 0.0f;
	
      for (int i = 0; i < 10; ++i)
	{
	  b2BodyDef ballbd;
	  ballbd.type = b2_dynamicBody;
	  ballbd.position.Set(-22.2f + i*1.0, 26.6f);
	  spherebody = m_world->CreateBody(&ballbd);
	  spherebody->CreateFixture(&ballfd);
	}
    }

    //The pulley system
    {
	/*!The pulley system
	 * 
	 * "box1" defines the open box using the fixtures "fd1","fd2","fd3" which represent 3
	 * edges of the box. Density, Friction are also using these 3 variables.
	 * 
	 * "box2" defines bar, its fixtures are defined using "fd1"
	 * 
	 * Pulley Joint is defined using the variable "myJoint", 2 anchors are defined are by
	 * worldAnchorGround1,worldAnchorGround2.
	 */
      b2BodyDef *bd = new b2BodyDef;
      bd->type = b2_dynamicBody;
      bd->position.Set(-10,15);
      bd->fixedRotation = true;
      
      //The open box
      b2FixtureDef *fd1 = new b2FixtureDef;
      fd1->density = 10.0;
      fd1->friction = 0.5;
      fd1->restitution = 0.f;
      fd1->shape = new b2PolygonShape;
      b2PolygonShape bs1;
      bs1.SetAsBox(2,0.2, b2Vec2(0.f,-1.9f), 0);
      fd1->shape = &bs1;
      b2FixtureDef *fd2 = new b2FixtureDef;
      fd2->density = 10.0;
      fd2->friction = 0.5;
      fd2->restitution = 0.f;
      fd2->shape = new b2PolygonShape;
      b2PolygonShape bs2;
      bs2.SetAsBox(0.2,2, b2Vec2(2.0f,0.f), 0);
      fd2->shape = &bs2;
      b2FixtureDef *fd3 = new b2FixtureDef;
      fd3->density = 10.0;
      fd3->friction = 0.5;
      fd3->restitution = 0.f;
      fd3->shape = new b2PolygonShape;
      b2PolygonShape bs3;
      bs3.SetAsBox(0.2,2, b2Vec2(-2.0f,0.f), 0);
      fd3->shape = &bs3;
       
      b2Body* box1 = m_world->CreateBody(bd);
      box1->CreateFixture(fd1);
      box1->CreateFixture(fd2);
      box1->CreateFixture(fd3);

      //The bar
      bd->position.Set(10,15);	
      fd1->density = 34.0;	  
      b2Body* box2 = m_world->CreateBody(bd);
      box2->CreateFixture(fd1);

      // The pulley joint
      b2PulleyJointDef* myjoint = new b2PulleyJointDef();
      b2Vec2 worldAnchorOnBody1(-10, 15); // Anchor point on body 1 in world axis
      b2Vec2 worldAnchorOnBody2(10, 15); // Anchor point on body 2 in world axis
      b2Vec2 worldAnchorGround1(-10, 20); // Anchor point for ground 1 in world axis
      b2Vec2 worldAnchorGround2(10, 20); // Anchor point for ground 2 in world axis
      float32 ratio = 1.0f; // Define ratio
      myjoint->Initialize(box1, box2, worldAnchorGround1, worldAnchorGround2, box1->GetWorldCenter(), box2->GetWorldCenter(), ratio);
      m_world->CreateJoint(myjoint);
    }

    //The revolving horizontal platform
    {
	/*!The revolving horizontal platform
	 * 
	 * The variables body,body2 defines 2 bodies; localanchorA and localanchorB define the 2 anchors
	 * 
	 * The variable jointDef defines the Revolute Joint using all of them.
	 * 
	 * The 2 bodies are boxes and their sizes, positions, fixtures are set.
	 */
      b2PolygonShape shape;
      shape.SetAsBox(2.2f, 0.2f);
	
      b2BodyDef bd;
      bd.position.Set(14.0f, 14.0f);
      bd.type = b2_dynamicBody;
      b2Body* body = m_world->CreateBody(&bd);
      b2FixtureDef *fd = new b2FixtureDef;
      fd->density = 1.f;
      fd->shape = new b2PolygonShape;
      fd->shape = &shape;
      body->CreateFixture(fd);

      b2PolygonShape shape2;
      shape2.SetAsBox(2.2f, 20.0f);
      b2BodyDef bd2;
      bd2.position.Set(14.0f, 16.0f);
      b2Body* body2 = m_world->CreateBody(&bd2);

      b2RevoluteJointDef jointDef;
      jointDef.bodyA = body;
      jointDef.bodyB = body2;
      jointDef.localAnchorA.Set(0,0);
      jointDef.localAnchorB.Set(0,0);
      jointDef.collideConnected = false;
      m_world->CreateJoint(&jointDef);
    }
    
    //The New revolving horizontal platform
    {
	/*!The New revolving horizontal platform
	 * 
	 * The variables body,body2 defines 2 bodies; localanchorA and localanchorB defines the 2 joints
	 * and the variable "jointDef" defines the Revolute Joint using all of them
	 * 
	 * The 2 bodies are boxes and their sizes, positions, fixtures are set.
	 * 
	 * Fixture is set using "fd".
	 */
      b2PolygonShape shape;
      shape.SetAsBox(2.2f, 0.2f);
	
      b2BodyDef bd;
      bd.position.Set(19.0f, 11.0f);
      bd.type = b2_dynamicBody;
      b2Body* body = m_world->CreateBody(&bd);
      b2FixtureDef *fd = new b2FixtureDef;
      fd->density = 1.f;
      fd->shape = new b2PolygonShape;
      fd->shape = &shape;
      body->CreateFixture(fd);

      b2PolygonShape shape2;
      shape2.SetAsBox(0.2f, 2.0f);
      b2BodyDef bd2;
      bd2.position.Set(19.0f, 13.0f);
      b2Body* body2 = m_world->CreateBody(&bd2);

      b2RevoluteJointDef jointDef;
      jointDef.bodyA = body;
      jointDef.bodyB = body2;
      jointDef.localAnchorA.Set(0,0);
      jointDef.localAnchorB.Set(0,0);
      jointDef.collideConnected = false;
      m_world->CreateJoint(&jointDef);
    }
    //The light box on the new platform
    {
	/*!The light box on the new platform
	 * 
	 * The variable "body3" defines the body 
     * 
     * The variable "shape2" sets its size.
	 * 
	 * The variable "bd3" defines the body with which position of box can be set.
	 * 
	 * The variable "fd3" defines the fixtures of body like density, restitution.
	 */
      b2PolygonShape shape2;
      shape2.SetAsBox(1.0f, 2.0f);
      b2BodyDef bd3;
      bd3.position.Set(19.0f, 14.0f);
      bd3.type = b2_dynamicBody;
      b2Body* body3 = m_world->CreateBody(&bd3);
      b2FixtureDef *fd3 = new b2FixtureDef;
      fd3->density = 0.01f;
      fd3->restitution = 0.5f;
      fd3->shape = new b2PolygonShape;
      fd3->shape = &shape2;
      body3->CreateFixture(fd3);
  }

    //The heavy sphere on the platform
    {
	/*!The heavy sphere on the platform
	 * 
	 * The variable "sbody" defines the Box2D body.
	 * 
	 * The variable "circle" defines the circle with which radius of circle can be changed.
	 * 
	 * The variable "ballfd" defines fixtures like density,friction.
	 */

      b2Body* sbody;
      b2CircleShape circle;
      circle.m_radius = 1.0;
	
      b2FixtureDef ballfd;
      ballfd.shape = &circle;
      ballfd.density = 50.0f;
      ballfd.friction = 0.0f;
      ballfd.restitution = 1.f;
      b2BodyDef ballbd;
      ballbd.type = b2_dynamicBody;
      ballbd.position.Set(14.0f, 18.0f);
      sbody = m_world->CreateBody(&ballbd);
      sbody->CreateFixture(&ballfd);
    }

    //The see-saw system at the bottom
    {
      //The triangle wedge
	/*!The see-saw system at the bottom
	 * 
	 * The variable "sbody" defines the wedge, "body" defines the plank, "anchor" defines the 
	 * joint, "jd" defines the Revolute Joint using all of them
	 * 
	 * The variable "poly" and "shape" defines the polygon with which endpoints of polygon
	 * can be changed.
	 * 
	 * The variable "wedgefd" and "fd2" defines fixtures like density,friction 
	 */
	      
      b2Body* sbody;
      b2PolygonShape poly;
      b2Vec2 vertices[3];
      vertices[0].Set(-1,0);
      vertices[1].Set(1,0);
      vertices[2].Set(0,1.5);
      poly.Set(vertices, 3);
      b2FixtureDef wedgefd;
      wedgefd.shape = &poly;
      wedgefd.density = 10.0f;
      wedgefd.friction = 0.0f;
      wedgefd.restitution = 0.0f;
      b2BodyDef wedgebd;
      wedgebd.position.Set(30.0f, 0.0f);
      sbody = m_world->CreateBody(&wedgebd);
      sbody->CreateFixture(&wedgefd);

      //The plank on top of the wedge
      
      b2PolygonShape shape;
      shape.SetAsBox(15.0f, 0.2f);
      b2BodyDef bd2;
      bd2.position.Set(30.0f, 1.5f);
      bd2.type = b2_dynamicBody;
      b2Body* body = m_world->CreateBody(&bd2);
      b2FixtureDef *fd2 = new b2FixtureDef;
      fd2->density = 1.f;
      fd2->shape = new b2PolygonShape;
      fd2->shape = &shape;
      body->CreateFixture(fd2);

      b2RevoluteJointDef jd;
      b2Vec2 anchor;
      anchor.Set(30.0f, 1.5f);
      jd.Initialize(sbody, body, anchor);
      m_world->CreateJoint(&jd);

      //The light box on the right side of the see-saw
    /*!The light box on the right side of the see-saw
     * 
     * The variable "body3" defines the Box2D body.
     * 
     * The variable "bd3" defines the Box2D body definition.
	 * 
	 * The variable "shape2" defines the box with which size of box can be set.
	 * 
	 * The variable "fd3" defines fixtures like density 
	 */
      b2PolygonShape shape2;
      shape2.SetAsBox(2.0f, 2.0f);
      b2BodyDef bd3;
      bd3.position.Set(40.0f, 2.0f);
      bd3.type = b2_dynamicBody;
      b2Body* body3 = m_world->CreateBody(&bd3);
      b2FixtureDef *fd3 = new b2FixtureDef;
      fd3->density = 1.f;
      fd3->shape = new b2PolygonShape;
      fd3->shape = &shape2;
      body3->CreateFixture(fd3);
      //new spheres

      {
	/*!New small spheres
	 * 
	 * The variable "spherebody" defines the Box2D body.
	 * 
	 * The variable "ballbd" defines the Box2D body definition.
	 * 
	 * The variable "circle" defines the circle with which radius of circle can be changed
	 * 
	 * The variable "ballfd" defines fixtures like density.
	 * 
	 * 10 spheres are created 
	 */		  
      b2Body* spherebody;
	
      b2CircleShape circle;
      circle.m_radius = 0.3;
	
      b2FixtureDef ballfd;
      ballfd.shape = &circle;
      ballfd.density = 0.0001f;
      ballfd.friction = 0.0f;
      ballfd.restitution = 1.f;
	
      for (int i = 0; i < 10; ++i)
		{
		  b2BodyDef ballbd;
		  ballbd.type = b2_dynamicBody;
		  ballbd.position.Set(30.0f + i*1.0, 2.0f);
		  spherebody = m_world->CreateBody(&ballbd);
		  spherebody->CreateFixture(&ballfd);
		}
    }
    }
    
    {
	/*!The new revolving vertical platform
	 * 
	 * The variables body,body2 defines 2 bodies; localanchorA and localanchorB define the 2 anchors
	 * 
	 * The variable jointDef defines the Revolute Joint using all of them.
	 * 
	 * The 2 bodies are boxes and their sizes, positions, fixtures are set.
	 */
      b2PolygonShape shape;
      shape.SetAsBox(0.2f, 10.2f);
	
      b2BodyDef bd;
      bd.position.Set(35.0f, 6.0f);
      bd.type = b2_dynamicBody;
      b2Body* body = m_world->CreateBody(&bd);
      b2FixtureDef *fd = new b2FixtureDef;
      fd->density = 1.f;
      fd->shape = new b2PolygonShape;
      fd->shape = &shape;
      body->CreateFixture(fd);

      b2PolygonShape shape2;
      shape2.SetAsBox(0.2f, 2.0f);
      b2BodyDef bd2;
      bd2.position.Set(35.0f, 13.0f);
      b2Body* body2 = m_world->CreateBody(&bd2);

      b2RevoluteJointDef jointDef;
      jointDef.bodyA = body;
      jointDef.bodyB = body2;
      jointDef.localAnchorA.Set(0,0);
      //jointDef.localAnchorB.Set(0,0);
      jointDef.collideConnected = false;
      m_world->CreateJoint(&jointDef);
    }
 /*! \var
 */
  }

  sim_t *sim = new sim_t("Dominos", dominos_t::create);
}
